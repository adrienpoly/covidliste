<div id="devise">
  <div class="container">
    <div class="row mt-5">
      <div class="col-12 col-sm-6 offset-sm-3">

        <p>
          <strong>Connexion - Espace personnel pour les volontaires inscrits</strong>
        </p>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= f.input :email,
                autocomplete: 'off',
                autofocus: true,
                required: true,
                id: 'inputEmail',
                placeholder: 'E-mail' %>

          <% if devise_mapping.rememberable? %>
            <p>
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </p>
          <% end %>

          <%= f.submit "Recevoir un lien de connexion", class: "btn btn-primary" %>

          <% if devise_mapping.confirmable? && controller_name != "confirmations" %>
            <p class="mt-3">
              <%= link_to "Redemander l’email de confirmation", new_confirmation_path(resource_name) %>
            </p>
          <% end %>

          <% if controller_name == "sessions"  %>
            <p class="mt-3">
              <%= link_to "S’inscrire en tant que volontaire", users_path %>
            </p>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
